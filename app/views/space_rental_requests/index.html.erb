<h1>Listing Your Space Rental Requests</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Location</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @space_rental_requests.each do |space_rental_request| %>
      <tr>
        <td><%= space_rental_request.location %></td>
        <td><%= space_rental_request.display_time(space_rental_request.start) %></td>
        <td><%= space_rental_request.display_time(space_rental_request.end) %></td>
        <td><%= link_to 'Show Details', space_rental_request %></td>
        <td><%= link_to 'Edit Rental Request', edit_space_rental_request_path(space_rental_request) %></td>
        <td><%= link_to 'Delete Rental Request', space_rental_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

